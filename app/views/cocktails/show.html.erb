<div class="container1234">
  <h1><%= @cocktail.name %></h1>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  <% @cocktail.doses.each do |dose| %>
  <%= dose.description %>
  <%= link_to "Delete this dose", dose_path(dose), method: :delete %>
  <% end %>
  <h3> <%= link_to "Cocktails", cocktails_path %> </h3>
  <%= link_to "Delete a cocktail", cocktail_path(@cocktail), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?" }%>
  <%= link_to "Add doses", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"%>
</div>
